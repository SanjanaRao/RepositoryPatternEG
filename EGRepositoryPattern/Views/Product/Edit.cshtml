@using EGRepositoryPattern.Models
@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center"> 
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row g-3">
            <div class="border p-3">


                <!-- Name Field -->
                <div class="form-floating col-12 mb-3">
                    <input asp-for="Name"  class="form-control border-0 shadow" placeholder="Name" />
                    <label asp-for="Name" class="ms-2">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <!-- Buttons Row -->
                <div class="row mt-3">
                    <div class="col-6 col-md-3 mb-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3 mb-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

